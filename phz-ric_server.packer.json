{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "type": "amazon-ebs",
      "region": "eu-central-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },
      "instance_type": "t2.nano",
      "ssh_username": "ubuntu",
      "ami_name": "phz-ric develop {{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "./scripts/provision/packer_install_ric.sh"
      ]
    }
  ]
}
